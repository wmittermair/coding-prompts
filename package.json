{
  "name": "prompt-manager",
  "version": "1.0.0",
  "description": "Eine Desktop-Anwendung zur Verwaltung von Prompts und Textbausteinen",
  "main": "dist/main/main.js",
  "scripts": {
    "dev:electron": "tsc --project electron.tsconfig.json && electron .",
    "dev:vite": "vite build --watch",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "build": "tsc --project electron.tsconfig.json && vite build",
    "start": "electron .",
    "preview": "vite preview",
    "test": "jest",
    "lint": "eslint src --ext ts,tsx --fix"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0"
  }
}
